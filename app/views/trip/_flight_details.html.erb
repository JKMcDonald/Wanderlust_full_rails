
    <div class="list-group">

        <% binding.pry %>
        <div class="d-flex w-100 justify-content-between" style="color: #fff;">
          <h4 class="mb-1">List of flights</h4>

          <h5 class="mb-1">Flights to <%=convert_airportcode_to_destination(flights[0]["destination"])%></h5>
            <% flights.each_with_index do |flight, index| %>
              <% binding.pry %>
              <p class="mb-1">Ticket price: <%= flight["saleTotal"] %></p>
              <p class="mb-1"><%= flights_date(flight["departure_time_when_leaving_home"])%> ----- <%= flights_date(flight["arrival_time_when_leaving_home"]) %></p>
              <p class="mb-1"><%= flight["origin"] %> ----------------------------- <%= flight["destination"] %></p>
              <p class="mb-1"><%= flights_date(flight["departure_time_when_coming_home"])%> ----- <%= flights_date(flight["arrival_time_when_coming_home"]) %></p>
              <p class="mb-1"><%= flight["destination"] %> -----------------------------<%= flight["origin"] %></p>
              <% if logged_in? %>
              <% binding.pry %>
              <p class="btn btn-success submit"><a href="/users/<%=index+1%>/savetrip" class="list-group-item list-group-item-action">Save flight to wishlist<a></p>
              <% end %>
            <% end %>

            <br>


        <a href="/trip/<%=1+city_index%>">Attractions in <%=convert_airportcode_to_destination(city[0][0]["destination"]) %></a><br>
        <% binding.pry %>
        <a href="/trip/<%=1+city_index%>/locations/museum">Museums in <%=convert_airportcode_to_destination(city[0][0]["destination"])%></a><br>
        <a href="/trip/<%=1+city_index%>/locations/restaurants">Restaurants in <%=convert_airportcode_to_destination(city[0][0]["destination"])%></a><br>
        <a href="/trip/<%=1+city_index%>/locations/beaches">Beaches in <%=convert_airportcode_to_destination(city[0][0]["destination"])%></a><br>
        <a href="/trip/<%=1+city_index%>/locations/bars">Bars in <%=convert_airportcode_to_destination(city[0][0]["destination"])%></a><br>


      </div>





