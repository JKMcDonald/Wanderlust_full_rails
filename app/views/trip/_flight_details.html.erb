    <div class="list-group">


        <div class="d-flex w-100 justify-content-between" style="color: #fff;">

          <h4 class="mb-1 black">Flights to <%=convert_airportcode_to_destination(flight["destination"])%></h4>

              <p class="mb-1 black ticket-price">Ticket price: <%= flight["saleTotal"] %></p>
              <p class="mb-1 black departure-flight-time"><%= flights_date(flight["departure_time_when_leaving_home"])%> ----- <%= flights_date(flight["arrival_time_when_leaving_home"]) %></p>
              <p class="mb-1 black"><%= flight["origin"] %> ----------------------------- <%= flight["destination"] %></p>
              <p class="mb-1 black arrival-flight-time"><%= flights_date(flight["departure_time_when_coming_home"])%> ----- <%= flights_date(flight["arrival_time_when_coming_home"]) %></p>
              <p class="mb-1 black"><%= flight["destination"] %> -----------------------------<%= flight["origin"] %></p>
              <% if logged_in? %>

                  <button class="btn btn-success submit">
                    <a href="/users/<%=index+1%>/savetrip" class="save-flight-button" >Save flight to wishlist</a>
                  </button>

              <% end %>

        <div class="bottom-container-links">
          <a class="btn btn-success" href="/trip/<%=1+index%>">Attractions in <%=convert_airportcode_to_destination(flight["destination"]) %></a>
          <a class="btn btn-success" href="/trip/<%=1+index%>/locations/hotels">Hotels in <%=convert_airportcode_to_destination(flight["destination"])%></a>
          <a class="btn btn-success" href="/trip/<%=1+index%>/locations/museum">Museums in <%=convert_airportcode_to_destination(flight["destination"])%></a>
          <a class="btn btn-success" href="/trip/<%=1+index%>/locations/restaurants">Restaurants in <%=convert_airportcode_to_destination(flight["destination"])%></a>
          <a class="btn btn-success" href="/trip/<%=1+index%>/locations/beaches">Beaches in <%=convert_airportcode_to_destination(flight["destination"])%></a>
          <a class="btn btn-success" href="/trip/<%=1+index%>/locations/bars">Bars in <%=convert_airportcode_to_destination(flight["destination"])%></a>
          <a class="btn btn-success" href="/trip/<%=1+index%>/locations/hotels">Hotels in <%=convert_airportcode_to_destination(flight["destination"])%></a>
      </div>

      </div>
