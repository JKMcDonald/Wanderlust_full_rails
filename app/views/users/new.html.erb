<div class="container">
  <div class="row"
  <%= form_for @user do |f| %>
    <div class="form-group">
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>
    </div>
    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit %>
    </p>
    <% end %>
  </div>
</div>
