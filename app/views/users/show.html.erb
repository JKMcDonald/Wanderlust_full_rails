		 30px 0 0 1px,
		 35px 0 0 1px,
		 37px 0 0 1px,
		 41px 0 0 1px,
		 44px 0 0 1px,
		 47px 0 0 1px,
		 51px 0 0 1px,
		 56px 0 0 1px,
		 59px 0 0 1px,
		 64px 0 0 1px,
		 68px 0 0 1px,
		 72px 0 0 1px,
		 74px 0 0 1px,
		 77px 0 0 1px,
		 81px 0 0 1px,
		 85px 0 0 1px,
		 88px 0 0 1px,
		 92px 0 0 1px,
		 95px 0 0 1px,
		 96px 0 0 1px,
		 97px 0 0 1px,
		 101px 0 0 1px,
		 105px 0 0 1px,
		 109px 0 0 1px,
		 110px 0 0 1px,
		 113px 0 0 1px,
		 116px 0 0 1px,
		 120px 0 0 1px,
		 123px 0 0 1px,
