  display: inline-block;
  height: 30px;
  margin-right: 85px;
  margin-top: 25px;
  -webkit-transform: translateX(-90px);
          transform: translateX(-90px);
  width: 0;
}
.disclaimer {
  color: #A2A2A2;
  font-family: "IM Fell French Canon";
  font-size: 14px;
  font-style: italic;
  line-height: 1.25;
  padding: 15px 25px;
  text-transform: none;
}
.layer {
  -webkit-transition: all 0.2s ease;
  -moz-transition: all 0.2s ease;
  -ms-transition: all 0.2s ease;
  -o-transition: all 0.2s ease;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 4px 4px 0 0;
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 1;
}
</style>

<h2 class="color" align="center">Your Wishlist</h2> <br><br>
<div class="container">
<% current_user.save_user_trips.each do |flight| %>

<div class="col-sm-6 col-sm-push-1 text-center">
   <div class="ticket light">
     <div class="ticket-head text-center" style="background-image: url('/assets/<%=flight.image_url%>')">
       <div class="layer"></div>
       <div class="from-to"><%= flight["origin"] %> <span class="icon icon-airplane"></span> <%= flight["destination"] %></div>
     </div>
     <div class="ticket-body">
       <div class="passenger">
         <p>passenger</p>
         <h4><%= current_user.name %></h4>
       </div>
       <div class="flight-info row">
         <div class="col-xs-6">
           <p>Departure Time</p>
           <h4><%= flights_date(flight["departure_time_when_leaving_home"])%></h4>
         </div>
         <div class="col-xs-6">
           <p>Arrival Time</p>
           <h4><%= flights_date(flight["arrival_time_when_leaving_home"]) %></h4>
         </div>
       </div>

       <div class="flight-info row">
         <div class="col-xs-6">
           <p>Flight Origin</p>
           <h4><%= flight["origin"] %></h4>
         </div>
         <div class="col-xs-6">
           <p>Flight Arrival</p>
           <h4><%= flight["destination"] %></h4>
         </div>
       </div>

       <!-- <div class="flight-date">jun-28-2017 at 08:30am</div> -->
       <div class="barcode"></div>
     </div>
     <!-- <div class="footer">
       <div class="disclaimer">Disclaimer: Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cupiditate debitis doloremque in inventore eum</div>
     </div> -->
   </div>
 </div>

 <div class="col-sm-4 text-center">
    <div class="ticket light">
