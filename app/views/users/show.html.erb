            <p>Departure Time</p>
            <h4><%= flights_date(flight["departure_time_when_coming_home"])%></h4>
          </div>
          <div class="col-xs-6">
            <p>Arrival Time</p>
            <h4><%= flights_date(flight["arrival_time_when_coming_home"]) %></h4>
          </div>
        </div>

        <div class="flight-info row">
          <div class="col-xs-6">
            <p>Flight Origin</p>
            <h4><%= flight["destination"] %></h4>
          </div>
          <div class="col-xs-6">
            <p>Flight Arrival</p>
            <h4><%= flight["origin"] %></h4>
          </div>
        </div>

        <!-- <div class="flight-date">jun-28-2017 at 08:30am</div> -->
        <div class="barcode"></div>
      </div>
